<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    >
    <com.shubham.haptikchattask.customViews.CircleImageView
        android:id="@+id/contact_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_contacts"
        />

    <TextView
        android:id="@+id/contact_name"
        android:layout_toRightOf="@+id/contact_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/participant_name"
        android:text="Socrates "/>
    <TextView
        android:id="@+id/textView_messages"
        android:layout_toRightOf="@+id/contact_image"
        android:layout_below="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/messages"
        android:autoLink="email"
        android:text="23 messages"/>
    <TextView
        android:id="@+id/textView_favourite"
        android:layout_toRightOf="@+id/contact_image"
        android:layout_below="@+id/textView_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/messages"
        android:autoLink="email"
        android:text="18 Starred"/>
    </RelativeLayout>